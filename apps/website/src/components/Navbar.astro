---
const { alwaysShrink = false } = Astro.props;
---

<nav
  class={`navbar navbar-expand-lg navbar-dark fixed-top ${alwaysShrink ? "always-shrink" : ""}`}
  id="mainNav"
>
  <div class="container">
    <a
      class="navbar-brand"
      data-nav
      data-page="/"
      data-element-id="page-top"
      href="#"
    >
      <img src="/assets/img/ade-logo.png" alt="ADE logo" />
    </a>
    <ul class="navbar-nav">
      <li class="nav-item">
        <a
          class="nav-link"
          href="#"
          data-nav
          data-page="/"
          data-element-id="page-top"
          id="navbar-brand-text"
        >
          ADULT DAY EXPERIENCES
        </a>
      </li>
    </ul>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarResponsive"
    >
      Menu <i class="fas fa-bars ms-1"></i>
    </button>
    <div class="collapse navbar-collapse" id="navbarResponsive">
      <ul class="navbar-nav text-uppercase ms-auto py-4 py-lg-0">
        <li class="nav-item">
          <a class="nav-link" href="#" data-nav data-page="/what-we-do"
            >What We Do</a
          >
        </li>
        <li class="nav-item">
          <a
            class="nav-link"
            href="#"
            data-nav
            data-page="/"
            data-element-id="about">About</a
          >
        </li>
        <li class="nav-item">
          <a
            class="nav-link"
            href="#"
            data-nav
            data-page="/faq"
            data-element-id="tourHeading">Schedule a Tour</a
          >
        </li>
        <li class="nav-item">
          <a
            class="nav-link"
            href="#"
            data-nav
            data-page="/"
            data-element-id="apply">Apply</a
          >
        </li>
        <li class="nav-item">
          <a
            class="nav-link"
            href="#"
            data-nav
            data-page="/"
            data-element-id="contact">Contact</a
          >
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#" data-nav data-page="/faq">FAQ</a>
        </li>
      </ul>
    </div>
  </div>
</nav>
